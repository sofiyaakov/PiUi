<div class='section'>
  <h1><span class="label label-primary"><%= "הגדרות ערוץ מס׳ #{@channel[:number]}"%></span></h1>
</div>
<div class='section'>
  <h3>ערוץ זה <span class="label label-<%=@channel[:status] ? 'success' : 'danger'%>"><%=@channel[:status] ? 'פעיל' : 'אינו פעיל'%></span> כרגע</h3>
</div>
<div class='section stretch form-container'>
  <form class='channel-form' action='' method='POST'>
    <div class='form-input'>
      <label for='ch_title'>שם הערוץ</label>
      <input class='form-control' type='text' id='ch_title' name='title' value='<%= @channel[:title] %>' />
    </div>
    <div class='form-input'>
      <label for='ch_category'>קטגוריה/רכיב</label>
      <input class='form-control' type='text' id='ch_category' name='category' value='<%= @channel[:category] %>' />
    </div>
    <div class='form-input'>
      <label for='ch_transmitter'>משדר מקושר</label>
      <input class='form-control' type='text' id='ch_transmitter' name='transmitter' value='<%= @channel[:transmitter] %>' />
    </div>
    <div class='form-input'>
      <label for='ch_parent'>ערוץ אב</label>
      <input class='form-control' type='number' id='ch_parent' name='parent' value='<%= @channel[:parent] %>' />
    </div>
    <div class='form-input'>
      <label for='ch_max_current'>זרם מקסימלי</label>
      <div class="input-group" dir='ltr'>
        <input class='form-control' type='number' id='ch_max_current' name='max_current' value='<%= @channel[:max_current] %>' />
        <span class="input-group-addon">A</span>
      </div>
    </div>
    <div class='form-input'>
      <label for='ch_supply_voltage'>הזנת מתח</label>
      <div class="input-group" dir='ltr'>
        <input class='form-control' type='number' id='ch_supply_voltage' name='supply_voltage' value='<%= @channel[:supply_voltage] %>' />
        <span class="input-group-addon">V</span>
      </div>
    </div>
    <div class='form-input'>
      <label></label>
      <input type='submit' class='btn-save btn btn-lg btn-primary' value='שמור'>
    </div>
  </form>
</div>
